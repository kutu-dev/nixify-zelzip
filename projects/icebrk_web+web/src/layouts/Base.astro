---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />

    <style is:global lang="scss">
      @use "@picocss/pico/scss/pico";
    </style>
  </head>

  <body>
    <slot />
  </body>
</html>
